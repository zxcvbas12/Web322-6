<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/main.css" />
    <title>Sets Details</title>
  </head>
  <body tabindex="-1">
    <%- include('partials/navbar', { page: '/lego/sets' }) %>

    <div class="container mx-auto p-4">
      <div class="hero bg-base-200 rounded-lg p-6">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold">Collection</h1>
            <p class="py-6">
              Browse the entire collection. Click the theme to filter by themes
              such as:

              <a href="/lego/sets" class="btn btn-primary btn-xs">All</a>

              <a href="/lego/sets?theme=Technic" class="btn btn-primary btn-xs"
                >Technic</a
              >
              <a
                href="/lego/sets?theme=Classic Town"
                class="btn btn-primary btn-xs"
                >Classic Town</a
              >
              <a
                href="/lego/sets?theme=Supplemental"
                class="btn btn-primary btn-xs"
                >Supplemental</a
              >
            </p>
          </div>
        </div>
      </div>

      <div class="overflow-x-auto overflow-y-hidden">
        <table class="table table-zebra">
          <thead>
            <tr>
              <th>Image</th>
              <th>Name</th>
              <th>Theme</th>
              <th>Year</th>
              <th>Num Parts</th>
              <th>Details</th>
            </tr>
          </thead>
          <tbody>
            <!-- Iterate over Lego sets and display data in table rows -->
            <% sets.forEach(set => { %>
            <tr>
              <td><img src="<%= set.img_url %>" alt="<%= set.name %>" /></td>
              <td><%= set.name %></td>
              <td>
                <a href="/lego/sets?theme=<%= set.theme %>" class="button"
                  ><%= set.theme %></a
                >
              </td>
              <td><%= set.year %></td>
              <td><%= set.num_parts %></td>
              <td>
                <a href="/lego/sets/<%= set.set_num %>" class="button"
                  >Details</a
                >
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
