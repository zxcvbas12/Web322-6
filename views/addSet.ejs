<!-- /views/addSet.ejs -->
<body tabindex="-1">
  <div class="navbar bg-base-100">
    <div class="container mx-auto p-4">
      <!-- Your title/header/hero text goes here -->
      <div class="flex-1">
        <a class="btn btn-ghost normal-case text-xl" href="/"
          >Lego Collection</a
        >
      </div>

      <!-- Render the navbar partial -->
      <%- include('partials/navbar', { page: '/lego/addSet' }) %>

      <div class="hero bg-base-200 rounded-lg p-6">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold">Add Set</h1>

            <p class="py-6">
              Use the below form to add a new Lego Set to the collection
            </p>
          </div>
        </div>
      </div>

      <br />

      <!-- Form starts here -->
      <form action="/lego/addSet" method="post">
        <!-- Input for name -->
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required />

        <!-- Input for year -->
        <label for="year">Year:</label>
        <input type="number" id="year" name="year" required />

        <!-- Input for num_parts -->
        <label for="num_parts">Number of Parts:</label>
        <input type="number" id="num_parts" name="num_parts" required />

        <!-- Input for img_url -->
        <label for="img_url">Image URL:</label>
        <input type="url" id="img_url" name="img_url" required />

        <!-- Dropdown for theme_id -->
        <label for="theme_id">Theme:</label>
        <select id="theme_id" name="theme_id" required>
          <% themes.forEach(theme => { %>
          <option value="<%= theme.id %>"><%= theme.name %></option>
          <% }) %>
        </select>

        <!-- Input for set_num -->
        <label for="set_num">Set Number:</label>
        <input type="text" id="set_num" name="set_num" required />

        <!-- Submit button -->
        <div class="mt-6">
          <button type="submit" class="btn btn-primary w-full">Add Set</button>
        </div>
      </form>
    </div>
  </div>
</body>
